<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:id="@+id/scrollview1">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/thumbnail_detailed_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:background="@color/blue_color"       />


    <TextView
        android:id="@+id/headline_detailed_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail_detailed_view"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/headline"
        android:textStyle="bold" />
            <TextView
                android:id="@+id/category_detailed_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/category" />
    <TextView
        android:id="@+id/contents_detailed_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headline_detailed_view"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/headline"
        android:gravity="left"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="1"
        />
        </LinearLayout>
</ScrollView>


</RelativeLayout>
